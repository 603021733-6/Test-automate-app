pipeline {
    agent any

    stages {
        stage('Checkout Code From Git') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/603021733-6/Test-automate-app.git'
            }
        }


        stage('Run Test Automate') {
            steps {
                sh '''
                robot --outputdir results tests/
                '''
            }
        }

        stage('Send Result To Jenkins') {
            steps {
                junit 'results/output.xml'
            }
        }
    }

}
